@model Flashcard.ViewModels.WordListViewModel

@{
    ViewData["Title"] = "WordList";
}

<div class="content m-auto p-4" style="max-width:900px">
    <h5 class="my-4">単語一覧</h5>

    <!-- 新規追加 -->
    <form asp-action="Create" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-4 g-3 align-items-center">
            <div class="col-4">
                <input type="text" name="Word" class="form-control box-shadow" placeholder="単語" required />
                <div class="invalid-feedback" style="display: block;">
                    <span asp-validation-for="Word"></span>
                </div>
            </div>
            <div class="col-6">
                <input type="text" name="Meaning" class="form-control box-shadow" placeholder="意味" required />
                <div class="invalid-feedback" style="display: block;">
                    <span asp-validation-for="Meaning"></span>
                </div>
            </div>
            <div class="col-2">
                <input type="hidden" name="UserId" />
                <input type="submit" value="追加" class="btnCommon btnCreate box-shadow" />
            </div>
        </div>
    </form>

    <!-- 一覧 -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="w-10">
                    No
                </th>
                <th class="w-30">
                    単語
                </th>
                <th class="w-40">
                    意味
                </th>
                <th class="w-20"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.WordList) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WordId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meaning)
                </td>
            
                <td>
                    <div class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.WordId">編集</a> |
                        <a asp-action="Delete" asp-route-id="@item.WordId">削除</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>