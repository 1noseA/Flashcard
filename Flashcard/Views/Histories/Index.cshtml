@using Flashcard.Controllers
@model Flashcard.ViewModels.HistoriesViewModel

@{
    ViewData["Title"] = "Histories";
}

@*<link rel="stylesheet" href="~/css/Histories/Index.css" asp-append-version="true" />*@
@*<script src="~/js/Histories/Index.js" asp-append-version="true"></script>*@

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="content m-auto p-4" style="max-width:900px">
    <div class="p-5 border box-shadow">
        <h5 class="mb-5 text-center">学習履歴</h5>

        <!-- グラフ -->
        <div>
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>

<script>
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [@Html.Raw(@Model.StudyDate)],
            datasets: [{
                label: '正答数(回)',
                data: [@Html.Raw(@Model.CorrectAnswerCount)],
                borderWidth: 1,
                yAxisID: 'first-y-axis'
            }, {
                label: '正答率(%)',
                type: "line",
                data: [@Html.Raw(@Model.CorrectAnswerRate)],
                yAxisID: 'second-y-axis'
            }]
        },
        options: {
            animation: false,
            plugins: {
                //legend: {
                //    display: false
                //},
                tooltip: {
                    enabled: false
                }
            }, // このかっこが足りなかったのが問題だった
            scales: {
                'first-y-axis': {
                    type: 'linear',
                    position: 'left',
                    min: 0,
                    max: 10,
                    ticks: {
                        stepSize: 1
                    },
                    title: {
                        display: true,
                        text: "正答数(回)"
                    }
                },
                'second-y-axis': {
                    type: 'linear',
                    position: 'right',
                    min: 0,
                    max: 100,
                    ticks: {
                        stepSize: 10
                    },
                    title: {
                        display: true,
                        text: "正答率(%)"
                    },
                    gridLines: {
                        drawOnChartArea: false,
                    }
                }
            }
        }
    });
</script>


