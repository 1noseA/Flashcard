@model Flashcard.ViewModels.StudyViewModel

@{
    ViewData["Title"] = "Study";
}

<div class="content m-auto p-4" style="max-width:600px">
    <div class="p-5 border box-shadow">
        <h5 class="mb-5 text-center">第<span>@Model.QuestionNo</span>問目</h5>
        @{
            if (!string.IsNullOrEmpty(Model.ErrorMsg))
            {
                <div class="invalid-feedback mb-3" style="display: block;">
                    @Model.ErrorMsg
                </div>
            }
        }
            
        <form asp-antiforgery="true" asp-controller="Study" asp-action="Answer" class="needs-validation" novalidate>
            <div class="row w-80 m-auto">
                <div class="mb-4">
                    @Model.QuestionList[0].Meaning
                </div>
                <div class="mb-5">
                    <input type="text" name="MyAnswer" id="myAnswer" class="form-control box-shadow" placeholder="回答" required />
                    <div class="invalid-feedback" style="display: block;">
                        <span asp-validation-for="MyAnswer"></span>
                    </div>
                </div>
                <div class="text-center mb-4">
                    <input type="submit" value="アンサーチェック！" class="btnCommon w-100 box-shadow" />
                </div>
            </div>
        </form>

        @{
            if (!string.IsNullOrEmpty(Model.CorrectAnswer) && !string.IsNullOrEmpty(Model.Judgement))
            {
                <div class="mb-3" style="display: block;">
                    @Model.CorrectAnswer
                    @Model.Judgement
                </div>
                <div class="text-center mb-4">
                    <input type="submit" value="アンサーチェック！" class="btnCommon w-80 box-shadow" />
                </div>
            }
        }
    </div>
</div>
